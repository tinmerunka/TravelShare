        @RenderBody()
    </main>

    <footer class="text-center">
        <div class="container">
            <p>&copy; 2024 TravelShare - Student travel sharing platform</p>
            <p class="text-muted small">Travel together, share costs</p>
        </div>
    </footer>

    <!-- Admin Modal -->
    <div class="modal fade" id="adminModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content" style="border-radius: 20px; border: none;">
                <div class="modal-header" style="background: linear-gradient(135deg, #2C3E50 0%, #4A5F7F 100%); color: white; border-radius: 20px 20px 0 0;">
                    <h5 class="modal-title" id="adminModalTitle">Admin Panel</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="adminModalBody">
                    <!-- Content will be loaded dynamically -->
                </div>
            </div>
        </div>
    </div>

    <!-- Confirm Modal -->
    <div class="modal fade" id="confirmModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" style="border-radius: 20px; border: none;">
                <div class="modal-header" style="border-bottom: none; padding-bottom: 0;">
                    <h5 class="modal-title" id="confirmModalTitle">Confirm</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="confirmModalBody">
                    <!-- Message will be set dynamically -->
                </div>
                <div class="modal-footer" style="border-top: none; padding-top: 0;">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="confirmModalButton">Confirm</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Success/Info Modal -->
    <div class="modal fade" id="infoModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" style="border-radius: 20px; border: none;">
                <div class="modal-header" style="border-bottom: none; padding-bottom: 0;">
                    <h5 class="modal-title" id="infoModalTitle">Information</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="infoModalBody">
                    <!-- Message will be set dynamically -->
                </div>
                <div class="modal-footer" style="border-top: none; padding-top: 0;">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
            crossorigin="anonymous"></script>

    <script>
        const adminModal = new bootstrap.Modal(document.getElementById('adminModal'));
        const confirmModal = new bootstrap.Modal(document.getElementById('confirmModal'));
        const infoModal = new bootstrap.Modal(document.getElementById('infoModal'));

        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.toast').forEach(t => new bootstrap.Toast(t).show());
            initializeDropdowns();
        });

        /* ---------- COMING SOON POPUPS ---------- */
        function showComingSoon(feature, icon = '🚀') {
            const popup = document.getElementById('customPopup');
            const backdrop = document.getElementById('customPopupBackdrop');

            const titles = {
                privacy: 'Privacy Settings',
                notifications: 'Notification Settings'
            };

            const messages = {
                privacy: 'Privacy and security settings are currently under development.',
                notifications: 'Notification preferences will be available soon.'
            };

            document.getElementById('customPopupTitle').textContent = titles[feature] || 'Coming Soon';
            document.getElementById('customPopupMessage').textContent =
                messages[feature] || 'This feature is currently under development.';
            document.getElementById('customPopupIcon').textContent = icon;

            backdrop.classList.add('show');
            popup.classList.add('show');
        }

        function hideCustomPopup() {
            document.getElementById('customPopup').classList.remove('show');
            document.getElementById('customPopupBackdrop').classList.remove('show');
        }

        document.getElementById('customPopupBackdrop')
            .addEventListener('click', hideCustomPopup);

        window.privacySettings = () => showComingSoon('privacy', '🔒');
        window.notificationSettings = () => showComingSoon('notifications', '🔔');

        /* ---------- DROPDOWNS ---------- */
        const dropdownTimeouts = {};

        function initializeDropdowns() {
            document.querySelectorAll('[data-dropdown]').forEach(dropdown => {
                const id = dropdown.getAttribute('data-dropdown');
                const trigger = dropdown.querySelector('.dropdown-toggle');
                const menu = dropdown.querySelector('.dropdown-menu');

                if (!trigger || !menu) return;

                trigger.addEventListener('mouseenter', () => {
                    clearTimeout(dropdownTimeouts[id]);
                    menu.classList.add('show');
                });

                trigger.addEventListener('mouseleave', () => {
