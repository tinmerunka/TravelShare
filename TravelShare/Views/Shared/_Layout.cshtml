<!DOCTYPE html>
<html lang="hr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TravelShare</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #2C3E50;
            --secondary-color: #E8B4F0;
            --accent-color: #FFB84D;
            --light-bg: #F8F9FA;
            --white: #FFFFFF;
            --text-dark: #2C3E50;
            --text-muted: #6C757D;
            --border-radius: 20px;
            --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.08);
            --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.12);
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--light-bg);
            color: var(--text-dark);
            line-height: 1.6;
        }

        /* Navbar Styles */
        .navbar {
            background-color: var(--white);
            padding: 1rem 0;
            box-shadow: var(--shadow-sm);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary-color) !important;
            letter-spacing: -0.5px;
        }

            .navbar-brand span {
                font-weight: 300;
                font-style: italic;
                color: var(--secondary-color);
            }

        .nav-link {
            color: var(--text-dark) !important;
            font-weight: 500;
            margin: 0 0.5rem;
            padding: 0.5rem 1rem !important;
            border-radius: 10px;
            transition: var(--transition);
        }

            .nav-link:hover {
                background-color: var(--light-bg);
                transform: translateY(-2px);
            }

        /* Button Styles */
        .btn-primary {
            background-color: var(--primary-color);
            border: none;
            border-radius: 12px;
            padding: 0.6rem 1.5rem;
            font-weight: 500;
            transition: var(--transition);
        }

            .btn-primary:hover {
                background-color: #1a252f;
                transform: translateY(-2px);
                box-shadow: var(--shadow-md);
            }

        .btn-secondary {
            background-color: var(--secondary-color);
            border: none;
            border-radius: 12px;
            padding: 0.6rem 1.5rem;
            font-weight: 500;
            color: var(--primary-color);
            transition: var(--transition);
        }

            .btn-secondary:hover {
                background-color: #d49ee0;
                transform: translateY(-2px);
                box-shadow: var(--shadow-md);
            }

        .btn-accent {
            background-color: var(--accent-color);
            border: none;
            border-radius: 12px;
            padding: 0.6rem 1.5rem;
            font-weight: 500;
            color: white;
            transition: var(--transition);
        }

            .btn-accent:hover {
                background-color: #f0a33d;
                transform: translateY(-2px);
                box-shadow: var(--shadow-md);
            }

        .btn-outline {
            background-color: transparent;
            border: 2px solid var(--primary-color);
            border-radius: 12px;
            padding: 0.6rem 1.5rem;
            font-weight: 500;
            color: var(--primary-color);
            transition: var(--transition);
        }

            .btn-outline:hover {
                background-color: var(--primary-color);
                color: white;
            }

        /* User Avatar */
        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid var(--secondary-color);
            transition: var(--transition);
            background: linear-gradient(135deg, #E8B4F0, #FFB84D);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.9rem;
            font-weight: 700;
            color: white;
        }

            .user-avatar:hover {
                transform: scale(1.05);
                border-color: var(--accent-color);
            }

        /* Dropdown */
        .dropdown-menu {
            border: none;
            box-shadow: var(--shadow-md);
            border-radius: 15px;
            padding: 0.5rem;
            margin-top: 0.5rem;
            opacity: 0;
            visibility: hidden;
            transform: translateY(-10px);
            transition: all 0.3s ease;
        }

            .dropdown-menu.show {
                opacity: 1;
                visibility: visible;
                transform: translateY(0);
            }

        .dropdown-item {
            border-radius: 10px;
            padding: 0.6rem 1rem;
            transition: var(--transition);
            color: var(--text-dark);
        }

            .dropdown-item:hover {
                background-color: var(--light-bg);
                transform: translateX(5px);
            }

        @@keyframes fadeInDown {
            from

        {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .dropdown-divider {
            margin: 0.5rem 0;
            border-color: var(--light-bg);
        }

        .admin-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            background: linear-gradient(135deg, #dc3545, #c82333);
            color: white;
            padding: 0.4rem 1rem;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.85rem;
            margin-left: 0.5rem;
        }

        .admin-nav-link {
            position: relative;
        }

            .admin-nav-link::before {
                content: '';
                position: absolute;
                top: -5px;
                right: -5px;
                width: 8px;
                height: 8px;
                background: #dc3545;
                border-radius: 50%;
                animation: pulse 2s infinite;
            }

        @@keyframes pulse {
            0%, 100%

        {
            opacity: 1;
            transform: scale(1);
        }

        50% {
            opacity: 0.5;
            transform: scale(1.2);
        }

        }

        .dropdown-header {
            font-weight: 600;
            color: var(--primary-color);
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            padding: 0.5rem 1rem;
        }

        .dropdown-item.admin-action {
            color: #dc3545;
        }

            .dropdown-item.admin-action:hover {
                background-color: rgba(220, 53, 69, 0.1);
            }

        /* Toast Notifications */
        .toast-container {
            position: fixed;
            top: 80px;
            right: 20px;
            z-index: 1055;
        }

        .toast {
            min-width: 300px;
            border: none;
            border-radius: 15px;
            box-shadow: 0 8px 24px rgba(0,0,0,0.15);
        }

        .toast-success {
            background: linear-gradient(135deg, #28a745, #20c997);
            color: white;
        }

        .toast-error {
            background: linear-gradient(135deg, #dc3545, #e74c3c);
            color: white;
        }

        .toast-header {
            background: transparent;
            border-bottom: none;
            color: inherit;
        }

        .toast-body {
            font-weight: 500;
        }

        /* Custom Popup for Coming Soon Messages */
        .custom-popup {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) scale(0.7);
            background: linear-gradient(135deg, var(--white) 0%, #f8f9fa 100%);
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
            z-index: 1060;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
            min-width: 320px;
            max-width: 400px;
            border: 3px solid var(--secondary-color);
        }

            .custom-popup.show {
                opacity: 1;
                visibility: visible;
                transform: translate(-50%, -50%) scale(1);
            }

        .custom-popup-header {
            background: linear-gradient(135deg, var(--secondary-color), var(--accent-color));
            color: white;
            padding: 1rem 1.5rem;
            border-radius: 17px 17px 0 0;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .custom-popup-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .custom-popup-icon {
            font-size: 1.3rem;
        }

        .custom-popup-close {
            background: none;
            border: none;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
            padding: 0;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

            .custom-popup-close:hover {
                background: rgba(255, 255, 255, 0.2);
                transform: rotate(90deg);
            }

        .custom-popup-body {
            padding: 1.5rem;
            text-align: center;
        }

        .custom-popup-message {
            font-size: 1rem;
            color: var(--text-dark);
            margin-bottom: 1rem;
            line-height: 1.5;
        }

        .custom-popup-footer {
            padding: 0 1.5rem 1.5rem;
            text-align: center;
        }

        .custom-popup-button {
            background: linear-gradient(135deg, var(--primary-color), #34495e);
            color: white;
            border: none;
            border-radius: 10px;
            padding: 0.7rem 2rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 0.9rem;
        }

            .custom-popup-button:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 16px rgba(44, 62, 80, 0.3);
            }

        .custom-popup-backdrop {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1059;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
        }

            .custom-popup-backdrop.show {
                opacity: 1;
                visibility: visible;
            }

        /* Footer */
        footer {
            background-color: var(--primary-color);
            color: var(--white);
            padding: 2rem 0;
            margin-top: 4rem;
        }

            footer p {
                margin: 0.3rem 0;
                opacity: 0.9;
            }

            footer .text-muted {
                color: rgba(255, 255, 255, 0.7) !important;
            }

        /* Main Content */
        main {
            min-height: calc(100vh - 200px);
        }

        /* Cards */
        .card {
            border: none;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-sm);
            transition: var(--transition);
            overflow: hidden;
            background-color: var(--white);
        }

            .card:hover {
                box-shadow: var(--shadow-md);
                transform: translateY(-5px);
            }

        /* Animations */
        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .fade-in {
            animation: fadeIn 0.6s ease-out;
        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
