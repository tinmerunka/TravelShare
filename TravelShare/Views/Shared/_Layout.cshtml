        function blockUser(userId, userName) {
            showConfirm('Blokiraj korisnika', 
                `Jeste li sigurni da želite blokirati korisnika ${userName}?`,
                function() {
                    showInfo('Uspjeh', `Korisnik ${userName} je blokiran. (Demo)`);
                }
            );
        }

        function deleteUser(userId, userName) {
            showConfirm('Izbriši korisnika',
                `Jeste li sigurni da želite izbrisati korisnika ${userName}? Ova akcija je nepovratna!`,
                function() {
                    showInfo('Uspjeh', `Korisnik ${userName} je izbrisan. (Demo)`);
                }
            );
        }

        function deleteGroup(groupId, groupName) {
            showConfirm('Izbriši grupu',
                `Jeste li sigurni da želite izbrisati grupu "${groupName}"?`,
                function() {
                    showInfo('Uspjeh', `Grupa "${groupName}" je izbrisana. (Demo)`);
                }
            );
        }

        function removeUserFromGroup(groupId) {
            showInfo('Info', `Otvara se prozor za odabir člana za uklanjanje iz grupe. (Demo)`);
        }

        function viewGroupDetails(groupId) {
            showInfo('Info', `Prikazuju se detalji grupe ID: ${groupId}. (Demo)`);
        }

        function filterLogs(type) {
            console.log('Filtering logs by type:', type);
