        function showSettings() {
            document.getElementById('adminModalTitle').textContent = 'Postavke aplikacije';
            document.getElementById('adminModalBody').innerHTML = `
                <form>
                    <div class="mb-3">
                        <label class="form-label">Naziv aplikacije</label>
                        <input type="text" class="form-control" value="TravelShare" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Maksimalan broj članova grupe</label>
                        <input type="number" class="form-control" value="10">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Automatsko odobrenje novih korisnika</label>
                        <select class="form-select">
                            <option selected>Da</option>
                            <option>Ne</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <div class="form-check form-switch">
