                            navAvatarUrl = $"https://ui-avatars.com/api/?name={name}&size=80&background=E8B4F0&color=2C3E50&font-size=0.5&bold=true";
                        }

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                Trips
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                Groups
                            </a>
                        </li>

                        @if (isAdmin)
                        {
                            <li class="nav-item dropdown" data-dropdown="adminDropdown">
                                <button class="nav-link dropdown-toggle admin-nav-link" type="button" id="adminDropdown" aria-expanded="false">
