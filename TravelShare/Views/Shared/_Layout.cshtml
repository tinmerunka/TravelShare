    </div>

    <!-- Success/Info Modal -->
    <div class="modal fade" id="infoModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" style="border-radius: 20px; border: none;">
                <div class="modal-header" style="border-bottom: none; padding-bottom: 0;">
                    <h5 class="modal-title" id="infoModalTitle">Information</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="infoModalBody">
                    <!-- Message will be set dynamically -->
                </div>
                <div class="modal-footer" style="border-top: none; padding-top: 0;">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        const adminModal = new bootstrap.Modal(document.getElementById('adminModal'));
        const confirmModal = new bootstrap.Modal(document.getElementById('confirmModal'));
        const infoModal = new bootstrap.Modal(document.getElementById('infoModal'));

        // Initialize toast notifications
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize all toasts
            const toasts = document.querySelectorAll('.toast');
            toasts.forEach(function(toastElement) {
                const toast = new bootstrap.Toast(toastElement);
                toast.show();
            });

            // Initialize dropdowns
            initializeDropdowns();
        });

        // Custom Popup Functions
        function showComingSoon(feature, icon = '🚀') {
            const popup = document.getElementById('customPopup');
            const backdrop = document.getElementById('customPopupBackdrop');
            const titleElement = document.getElementById('customPopupTitle');
            const messageElement = document.getElementById('customPopupMessage');
            const iconElement = document.getElementById('customPopupIcon');

            // Set content based on feature
            let title, message;
            switch(feature.toLowerCase()) {
                case 'privacy':
                    title = 'Privacy Settings';
                    message = 'Privacy and security settings are currently being developed. You\'ll be able to manage your privacy preferences, data visibility, and account security options soon!';
                    icon = '🔒';
                    break;
                case 'notifications':
                    title = 'Notification Settings';
                    message = 'Notification preferences are coming soon! You\'ll be able to customize email alerts, push notifications, and communication preferences for trips and groups.';
                    icon = '🔔';
                    break;
                default:
                    title = 'Coming Soon';
                    message = 'This feature is currently under development and will be available soon!';
                    icon = '🚀';
            }

            titleElement.textContent = title;
            messageElement.textContent = message;
            iconElement.textContent = icon;

            // Show popup with animation
            backdrop.classList.add('show');
            popup.classList.add('show');
        }

        function hideCustomPopup() {
            const popup = document.getElementById('customPopup');
            const backdrop = document.getElementById('customPopupBackdrop');

            popup.classList.remove('show');
            backdrop.classList.remove('show');
        }

        // Close popup when clicking on backdrop
        document.getElementById('customPopupBackdrop').addEventListener('click', hideCustomPopup);

        // Global functions for coming soon features
        window.privacySettings = function() {
            showComingSoon('privacy');
        };

        window.notificationSettings = function() {
            showComingSoon('notifications');
        };

        // Dropdown delay functionality
        let dropdownTimeouts = {};

        function initializeDropdowns() {
            const dropdowns = document.querySelectorAll('[data-dropdown]');

            dropdowns.forEach(dropdown => {
                const dropdownId = dropdown.getAttribute('data-dropdown');
                const trigger = dropdown.querySelector('.dropdown-toggle');
                const menu = dropdown.querySelector('.dropdown-menu');

                if (trigger && menu) {
                    // Show dropdown on hover
                    trigger.addEventListener('mouseenter', () => {
                        clearTimeout(dropdownTimeouts[dropdownId]);
                        menu.classList.add('show');
                    });

                    // Start hide timer when leaving trigger
                    trigger.addEventListener('mouseleave', () => {
                        dropdownTimeouts[dropdownId] = setTimeout(() => {
                            menu.classList.remove('show');
                        }, 300); // 300ms delay
                    });

                    // Show dropdown when hovering over menu
                    menu.addEventListener('mouseenter', () => {
                        clearTimeout(dropdownTimeouts[dropdownId]);
                        menu.classList.add('show');
                    });

                    // Start hide timer when leaving menu
                    menu.addEventListener('mouseleave', () => {
                        dropdownTimeouts[dropdownId] = setTimeout(() => {
                            menu.classList.remove('show');
                        }, 300); // 300ms delay
                    });

                    // Prevent dropdown from closing when clicking inside
                    menu.addEventListener('click', (e) => {
                        // Don't stop propagation for logout button or other action items
                        if (!e.target.closest('button[type="submit"]') &&
                            !e.target.closest('a[href]:not([href="#"])')) {
                            e.stopPropagation();
                        }
                    });
                }
            });
        }

