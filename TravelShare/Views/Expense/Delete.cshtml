@model TravelShare.Models.Expenses.Expense

@{
    ViewData["Title"] = "Delete Expense";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="feature-card fade-in">
                <div class="feature-icon">💰</div>
                <p><strong>Amount:</strong> @Model.Amount €</p>
                <p><strong>Description:</strong> @Model.Description</p>
                <p><strong>Date:</strong> @Model.CreatedAt.ToString("dd.MM.yyyy")</p>
            </div>

            <div class="text-center mt-4">
                <button type="button" class="btn btn-danger btn-delete" id="openDeleteModal">Delete</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
            </div>

        </div>
    </div>
</div>


<div id="deleteModal" class="custom-modal">
    <div class="custom-modal-content">
        <h4>Are you sure you want to delete this expense?</h4>
        <p>This action cannot be undone.</p>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger btn-modal">Yes, Delete</button>
        </form>
        <button type="button" class="btn btn-secondary btn-modal" id="cancelDelete">Cancel</button>
    </div>
</div>

@section Styles {
    <style>
        .custom-modal {
            display: none;
            position: fixed;
            z-index: 1050;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.5);
        }

        .custom-modal-content {
            background-color: #fff;
            margin: 15% auto;
            padding: 2rem;
            border-radius: 15px;
            max-width: 400px;
            text-align: center;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        }

        .btn-modal {
            margin-top: 1rem;
            width: 45%;
            padding: .7rem;
            border-radius: 10px;
            font-weight: 600;
        }

        .btn-delete {
            border-radius: 14px;
            padding: .8rem 1.2rem;
            background: linear-gradient(135deg, #d9534f, #c9302c);
            border: none;
            color: white;
            font-weight: 600;
            transition: 0.3s;
        }

            .btn-delete:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 20px rgba(0,0,0,0.2);
            }

        .fade-in {
            opacity: 0;
            animation: fadeIn 0.5s ease forwards;
        }
    </style>
}

@section Scripts {
    <script>
        const modal = document.getElementById('deleteModal');
        document.getElementById('openDeleteModal').addEventListener('click', () => {
            modal.style.display = 'block';
        });
        document.getElementById('cancelDelete').addEventListener('click', () => {
            modal.style.display = 'none';
        });
        window.addEventListener('click', (e) => {
            if(e.target === modal) modal.style.display = 'none';
        });
    </script>
}
