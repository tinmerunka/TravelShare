@model TravelShare.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Sign In";
}

@section Styles {
<style>
    .login-page {
        min-height: calc(100vh - 200px);
        display: flex;
        align-items: center;
        padding: 3rem 0;
    }

    .login-container {
        max-width: 1000px;
        margin: 0 auto;
    }

    .login-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0;
        background: white;
        border-radius: 30px;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0,0,0,0.12);
    }

    .login-visual {
        background: linear-gradient(135deg, #2C3E50 0%, #4A5F7F 100%);
        padding: 3rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: white;
        position: relative;
        overflow: hidden;
    }

    .login-visual::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -20%;
        width: 300px;
        height: 300px;
        background: radial-gradient(circle, rgba(232, 180, 240, 0.2) 0%, transparent 70%);
        border-radius: 50%;
    }

    .login-visual h2 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        position: relative;
        z-index: 1;
    }

    .login-visual h2 span {
        font-weight: 300;
        font-style: italic;
        color: var(--secondary-color);
    }

    .login-visual p {
        font-size: 1.1rem;
        opacity: 0.9;
        position: relative;
        z-index: 1;
        text-align: center;
    }

    .login-visual .feature-list {
        margin-top: 2rem;
        position: relative;
        z-index: 1;
    }

    .login-visual .feature-item {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
        padding-left: 2rem;
    }

    .login-form {
        padding: 3rem;
    }

    .login-form h3 {
        font-size: 2rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 0.5rem;
    }

    .login-form .subtitle {
        color: var(--text-muted);
        margin-bottom: 2rem;
    }

    .form-floating {
        margin-bottom: 1.5rem;
    }

    .form-floating label {
        color: var(--text-muted);
        font-weight: 500;
    }

    .form-control {
        border: 2px solid #E9ECEF;
        border-radius: 12px;
        padding: 1rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: var(--secondary-color);
        box-shadow: 0 0 0 0.2rem rgba(232, 180, 240, 0.25);
    }

    .form-check {
        margin-bottom: 1.5rem;
    }

    .form-check-input:checked {
        background-color: var(--secondary-color);
        border-color: var(--secondary-color);
    }

    .demo-box {
        background: linear-gradient(135deg, rgba(232, 180, 240, 0.1), rgba(255, 184, 77, 0.1));
        border: 2px dashed var(--secondary-color);
        border-radius: 15px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }

    .demo-box h6 {
        color: var(--primary-color);
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .demo-box .credential {
        background: white;
        padding: 0.8rem;
        border-radius: 10px;
        margin-bottom: 0.5rem;
        font-family: 'Courier New', monospace;
        font-size: 0.9rem;
    }

    .demo-box .credential strong {
        color: var(--primary-color);
    }

    .divider {
        text-align: center;
        margin: 1.5rem 0;
        position: relative;
    }

    .divider::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        height: 2px;
        background: #E9ECEF;
    }

    .divider span {
        background: white;
        padding: 0 1rem;
        position: relative;
        color: var(--text-muted);
        font-weight: 500;
    }

    .social-btn {
        width: 100%;
        padding: 0.8rem;
        border: 2px solid #E9ECEF;
        border-radius: 12px;
        background: white;
        font-weight: 500;
        transition: all 0.3s ease;
        margin-bottom: 0.8rem;
        color: var(--text-dark);
    }

    .social-btn:hover:not(:disabled) {
        border-color: var(--secondary-color);
        background: var(--light-bg);
        transform: translateY(-2px);
    }

    .social-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    @@media (max-width: 768px) {
        .login-grid {
            grid-template-columns: 1fr;
        }

        .login-visual {
            padding: 2rem;
        }

        .login-form {
            padding: 2rem;
        }
    }
</style>
}

<div class="login-page">
    <div class="container">
        <div class="login-container fade-in">
            <div class="login-grid">
                <div class="login-visual">
                    <h2>Travel<span>Share</span></h2>
                    <p>Your student travel community</p>
                    
                    <div class="feature-list">
                        <div class="feature-item">
                            <span>Find travel buddies</span>
                        </div>
                        <div class="feature-item">
                            <span>Share costs</span>
                        </div>
                        <div class="feature-item">
                            <span>Organize trips</span>
                        </div>
                    </div>
                </div>

                <div class="login-form">
                    <h3>Sign In</h3>
                    <p class="subtitle">Enter your credentials to access</p>

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="demo-box">
                        <h6>Demo Credentials</h6>
                        <div class="credential">
                            <strong>Student:</strong> student@travelshare.com / password123
                        </div>
                        <div class="credential">
                            <strong>Admin:</strong> admin@travelshare.com / admin123
                        </div>
                    </div>

                    <form asp-action="Login" method="post">
                        <div class="form-floating">
                            <input asp-for="Email" class="form-control" id="emailInput" 
                                   placeholder="name@example.com" />
                            <label for="emailInput">Email Address</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating">
                            <input asp-for="Password" class="form-control" id="passwordInput" 
                                   placeholder="Password" type="password" />
                            <label for="passwordInput">Password</label>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="form-check">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberCheck" />
                            <label class="form-check-label" for="rememberCheck">
                                Remember me
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 mb-3">
                            Sign In
                        </button>

                        <div class="text-center">
                            <a href="#" class="text-decoration-none">Forgot your password?</a>
                        </div>
                    </form>

                    <div class="divider">
                        <span>or continue with</span>
                    </div>

                    <button class="social-btn" disabled>
                        Google
                    </button>
                    <button class="social-btn" disabled>
                        Microsoft
                    </button>

                    <div class="text-center mt-4">
                        <p class="mb-0">
                            Don't have an account? 
                            <a asp-action="Register" class="text-decoration-none fw-bold" style="color: var(--secondary-color)">
                                Sign Up
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
