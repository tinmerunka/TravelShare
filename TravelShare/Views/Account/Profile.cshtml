@section Scripts {
    <script>
        let isEditMode = false;
        let originalValues = {};

        function toggleEditMode() {
            if (isEditMode) {
                cancelEdit();
            } else {
                enterEditMode();
            }
        }

        function enterEditMode() {
            isEditMode = true;

            // Store original values
            originalValues = {};
            document.querySelectorAll('.display-value').forEach(element => {
                const input = element.parentNode.querySelector('.edit-input');
                if (input) {
                    if (input.tagName === 'SELECT') {
                        originalValues[input.name] = input.value;
                    } else if (input.classList.contains('budget-inputs')) {
                        const minInput = input.querySelector('input[name="MinBudget"]');
                        const maxInput = input.querySelector('input[name="MaxBudget"]');
                        if (minInput) originalValues['MinBudget'] = minInput.value;
                        if (maxInput) originalValues['MaxBudget'] = maxInput.value;
                    } else if (input.name === 'PreferredDestinations') {
                        originalValues[input.name] = input.value;
                    } else if (input.name) {
                        originalValues[input.name] = input.value;
                    }
                }
            });

            // Show edit controls and hide display values
            document.querySelectorAll('.display-value').forEach(el => el.style.display = 'none');
            document.querySelectorAll('.edit-input').forEach(el => el.style.display = 'block');
            document.querySelectorAll('.edit-controls').forEach(el => el.style.display = 'block');

            // Update button text
            const editBtn = document.getElementById('edit-btn-text');
            if (editBtn) editBtn.textContent = 'Cancel Edit';

            // Add edit mode class
            document.querySelectorAll('.info-card').forEach(card => card.classList.add('edit-mode'));
        }

        function cancelEdit() {
            isEditMode = false;

            // Restore original values
            Object.keys(originalValues).forEach(name => {
                const input = document.querySelector(`[name="${name}"]`);
                if (input) {
                    input.value = originalValues[name];
                }
            });

            // Restore destinations if they were modified
            if (originalValues['PreferredDestinations']) {
                const destinations = originalValues['PreferredDestinations'].split(',').filter(d => d.trim());
                const container = document.getElementById('destinations-edit');
                if (container) {
                    container.innerHTML = '';
                    destinations.forEach(dest => {
                        if (dest.trim()) {
                            const span = document.createElement('span');
                            span.className = 'preference-tag removable';
                            span.setAttribute('onclick', 'removeDestination(this)');
                            span.setAttribute('data-destination', dest.trim());
                            span.textContent = dest.trim();
                            container.appendChild(span);
                        }
                    });
                }
            }

            exitEditMode();
        }

        function exitEditMode() {
            // Hide edit controls and show display values
            document.querySelectorAll('.display-value').forEach(el => el.style.display = 'block');
            document.querySelectorAll('.edit-input').forEach(el => el.style.display = 'none');
            document.querySelectorAll('.edit-controls').forEach(el => el.style.display = 'none');

            // Update button text
            const editBtn = document.getElementById('edit-btn-text');
            if (editBtn) editBtn.textContent = 'Edit Profile';

            // Remove edit mode class
            document.querySelectorAll('.info-card').forEach(card => card.classList.remove('edit-mode'));

            isEditMode = false;
        }

        function saveProfile() {
            // Update destinations hidden field
            updateDestinationsHidden();

            // Set form action to update profile
            const form = document.getElementById('profile-form');
            if (form) {
                form.action = '@Url.Action("UpdateProfile", "Account")';
                form.submit();
            }
        }

        function addDestination() {
            const input = document.getElementById('new-destination');
            const destination = input?.value?.trim();

            if (destination) {
                const container = document.getElementById('destinations-edit');
                if (container) {
                    const span = document.createElement('span');
                    span.className = 'preference-tag removable';
                    span.setAttribute('onclick', 'removeDestination(this)');
                    span.setAttribute('data-destination', destination);
                    span.textContent = destination;
                    container.appendChild(span);

                    input.value = '';
                    updateDestinationsHidden();
                }
            }
        }

        function removeDestination(element) {
            if (isEditMode && element) {
                element.remove();
                updateDestinationsHidden();
            }
        }

        function updateDestinationsHidden() {
            const destinations = Array.from(document.querySelectorAll('#destinations-edit .preference-tag'))
                .map(el => el.getAttribute('data-destination'))
                .filter(dest => dest);
            const hiddenInput = document.getElementById('destinations-hidden');
            if (hiddenInput) {
                hiddenInput.value = destinations.join(',');
            }
        }

        function changePassword() {
            const modal = new bootstrap.Modal(document.getElementById('changePasswordModal'));
            modal.show();
        }

        function changePasswordSubmit() {
            const form = document.querySelector('#changePasswordModal form');
            if (form) {
                form.action = '@Url.Action("ChangePassword", "Account")';
            }
        }

        function privacySettings() {
            alert('Privacy Settings functionality - Coming soon!');
        }

        function notificationSettings() {
            alert('Notification Settings functionality - Coming soon!');
        }

        // Add enter key support for destination input
        document.addEventListener('DOMContentLoaded', function() {
            const destInput = document.getElementById('new-destination');
            if (destInput) {
                destInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        addDestination();
                    }
                });
            }
        });
    </script>
}